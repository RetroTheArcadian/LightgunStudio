<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:view="clr-namespace:LightgunStudio.View"
                    xmlns:vm="clr-namespace:LightgunStudio.ViewModel"
                    >

    <DataTemplate DataType="{x:Type vm:DependenciesVM}">
        <view:Dependencies />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:EmulatorsVM}">
        <view:Emulators />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:FrontendsVM}">
        <view:Frontends />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:GunsVM}">
        <view:Guns />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:HomeVM}">
        <view:Home />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:SettingsVM}">
        <view:Settings />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:SoftwareVM}">
        <view:Software />
    </DataTemplate>

</ResourceDictionary>