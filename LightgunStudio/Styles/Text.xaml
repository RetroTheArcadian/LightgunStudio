<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Text_Style"
           TargetType="TextBlock">

        <Setter Property="FontFamily"
                Value="/Fonts/#Stormlight" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="Foreground"
                Value="#DBDBDB" />
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="Margin"
                Value="70,0,0,0" />

    </Style>
    <Style x:Key="Text_Style_Header"
           TargetType="TextBlock">

        <Setter Property="FontFamily"
                Value="/Fonts/#Stormlight" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="Foreground"
                Value="#DBDBDB" />
        <Setter Property="FontSize"
                Value="32" />
        <Setter Property="Margin"
                Value="0,0,0,0" />

    </Style>
    <Style x:Key="Text_Style_PageHeader"
           TargetType="TextBlock">

        <Setter Property="FontFamily"
                Value="/Fonts/#Stormlight" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="Foreground"
                Value="#DBDBDB" />
        <Setter Property="FontSize"
                Value="24" />
        <Setter Property="Margin"
                Value="0,0,0,0" />

    </Style>
    <Style x:Key="Text_Style_Version"
           TargetType="TextBlock">

        <Setter Property="FontFamily"
                Value="/Fonts/#Roboto Light" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Right" />
        <Setter Property="Foreground"
                Value="#DBDBDB" />
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="Margin"
                Value="0,0,0,0" />

    </Style>
</ResourceDictionary>